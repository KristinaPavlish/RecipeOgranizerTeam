<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Organizer" Height="350" Width="500">
    <Grid>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="30,80,0,0" VerticalAlignment="Top"/>
        <TextBox Name="UsernameTextBox" HorizontalAlignment="Left" Margin="120,80,0,0" VerticalAlignment="Top" Width="200"/>

        <Label Content="Password:" HorizontalAlignment="Left" Margin="30,120,0,0" VerticalAlignment="Top"/>
        <PasswordBox Name="PasswordTextBox" HorizontalAlignment="Left" Margin="120,120,0,0" VerticalAlignment="Top" Width="200"/>

        <Button Content="Login" HorizontalAlignment="Left" Margin="30,160,0,0" VerticalAlignment="Top" Width="100" Click="LoginButton_Click"/>
    </Grid>
</Window>