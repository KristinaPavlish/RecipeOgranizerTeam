<Window x:Class="Presentation.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SignUp" Width="800" Height="600">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="SignUp" FontSize="20" Margin="0 0 0 20" />

            <TextBlock Text="Email:" />
            <TextBox x:Name="EmailTextBox" Width="250" Height="30" Margin="0 0 0 10" />

            <TextBlock Text="Username:" />
            <TextBox x:Name="UsernameTextBox" Width="250" Height="30" Margin="0 0 0 10" />

            <TextBlock Text="Password:" />
            <PasswordBox x:Name="PasswordBox" Width="250" Height="30" Margin="0 0 0 10" />

            <Button Content="Sign Up" Click="SignUpButton_Click" Width="150" Height="40" Margin="0 20 0 0" />
        </StackPanel>
    </Grid>
</Window>
