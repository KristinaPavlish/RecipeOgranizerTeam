<Window x:Class="Presentation.Recipes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipes" Width="800" Height="600">
    <Grid>
        <TextBlock Text="{Binding Bookname}" FontWeight="Bold" Margin="10,0,10,0" />
        <TextBlock Text="{Binding Description}" Margin="10,10,10,10" />
        <ListBox Name="RecipesListBox" Margin="30">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Recipename}" FontWeight="Bold" />
                        <TextBlock Text="{Binding Ingredients}" />
                        <TextBlock Text="{Binding Process}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
