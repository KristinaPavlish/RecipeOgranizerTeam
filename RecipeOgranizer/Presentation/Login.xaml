<Window x:Class="Presentation.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Width="800" Height="600" Background="LightGray">
    <Grid>

        <Label Content="Email:" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="-5.255,-0.823" Margin="0,80,0,0"/>
        <TextBox Name="EmailTextBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Margin="0,110,0,0" Grid.Row="0"/>

        <Label Content="Password:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,140,0,0"/>
        <PasswordBox Name="PasswordTextBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Margin="0,170,0,0" Grid.Row="0"/>

        <Button Content="Login" HorizontalAlignment="Center" Width="200" Height="30" Click="LoginButton_Click" Margin="0,230,0,325"/>
    </Grid>
</Window>
